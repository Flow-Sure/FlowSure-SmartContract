# FlowSure Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ==============================================
# Flow Network Configuration
# ==============================================

# Network to use (emulator, testnet, mainnet)
FLOW_NETWORK=testnet

# ==============================================
# Flow Account Configuration
# ==============================================

# Testnet Account Address
FLOW_TESTNET_ADDRESS=0x1234567890abcdef

# Testnet Account Private Key (hex format)
FLOW_TESTNET_PRIVATE_KEY=your_private_key_here

# Account Key Index (usually 0)
FLOW_ACCOUNT_KEY_INDEX=0

# ==============================================
# Emulator Configuration (for local testing)
# ==============================================

# Emulator Service Account Address
FLOW_EMULATOR_ADDRESS=0xf8d6e0586b0a20c7

# Emulator Service Account Private Key
FLOW_EMULATOR_PRIVATE_KEY=ae1b44c0f5e8f6992ef2348898a35e50a8b0b9684000da483c3fb0e91e3a0a4b

# ==============================================
# Contract Addresses (after deployment)
# ==============================================

# Events Contract Address
EVENTS_CONTRACT_ADDRESS=

# InsuranceVault Contract Address
INSURANCE_VAULT_CONTRACT_ADDRESS=

# Scheduler Contract Address
SCHEDULER_CONTRACT_ADDRESS=

# InsuredAction Contract Address
INSURED_ACTION_CONTRACT_ADDRESS=

# ==============================================
# FlowSure Configuration
# ==============================================

# Default retry delay in seconds
DEFAULT_RETRY_DELAY=60

# Default compensation amount in FLOW
DEFAULT_COMPENSATION_AMOUNT=1.0

# Default retry limit
DEFAULT_RETRY_LIMIT=3

# Initial vault funding amount in FLOW
INITIAL_VAULT_FUNDING=100.0

# ==============================================
# API Configuration (for frontend/backend)
# ==============================================

# Flow Access Node URL
FLOW_ACCESS_NODE_URL=https://rest-testnet.onflow.org

# Alternative: Testnet gRPC
# FLOW_ACCESS_NODE_GRPC=access.devnet.nodes.onflow.org:9000

# ==============================================
# Monitoring & Logging
# ==============================================

# Enable verbose logging
VERBOSE_LOGGING=false

# Event polling interval in seconds
EVENT_POLL_INTERVAL=5

# ==============================================
# Security
# ==============================================

# Admin wallet address (for emergency operations)
ADMIN_ADDRESS=

# Admin private key (store securely, use key management service in production)
ADMIN_PRIVATE_KEY=

# ==============================================
# Development Settings
# ==============================================

# Enable debug mode
DEBUG_MODE=false

# Simulate failures for testing
SIMULATE_FAILURES=false

# Test mode (uses emulator)
TEST_MODE=false
